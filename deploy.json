                      "type": "integer"
                    }
                  }
                },
                "method": "POST"
              }
            }
          },
          "contentVersion": "1.0.0.0",
          "outputs": {}
        },
        "parameters": {}
      }
    },
    {
      "name": "[variables('Rebuild Env App Name')]",
      "type": "Microsoft.Logic/workflows",
      "apiVersion": "2017-07-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Logic/workflows', variables('Create Release App Name'))]",
        "[resourceId('Microsoft.Logic/workflows', variables('Get Release Status App Name'))]"
      ],
      "tags": {},
      "properties": {
        "definition": {
          "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
          "actions": {
            "get-pat": {
              "inputs": {
                "body": {
                  "secret": "pat"
                },
                "host": {
                  "triggerName": "http-post",
                  "workflow": {
                    "id": "[resourceId('Microsoft.Logic/workflows', variables('Get Secret App Name'))]"
                  }
                }
              },
              "runAfter": {},
              "type": "Workflow"
            },
            "response-accepted": {
              "inputs": {
                "body": {
                  "value": 42
                },
                "statusCode": 202
              },
              "kind": "http",
              "runAfter": {},
              "type": "Response"
            },
            "parse-pat": {
              "inputs": {
                "content": "@body('get-pat')",
                "schema": {
                  "properties": {
                    "value": {
                      "type": "string"
                    }
                  },
                  "type": "object"
                }
              },
              "runAfter": {
                "get-pat": [
                  "Succeeded"
                ]
              },
              "type": "ParseJson"
            },
            "initialize-error-release": {
              "inputs": {
                "variables": [
                  {
                    "name": "errorRelease",
                    "type": "String",
                    "value": ""
                  }
                ]
              },
              "runAfter": {},
              "type": "InitializeVariable"
            },
            "parse-project-configuration": {
              "inputs": {
                "content": "[parameters('projectConfig')]",
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "stage": {
                        "type": "string"
                      },
                      "releases": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "release": {
                              "type": "string"
                            },
                            "project": {
                              "type": "string"
                            },
                            "releaseDefinitionId": {
                              "type": "integer"
                            }
                          },
                          "required": [
                            "release",
                            "project",
                            "releaseDefinitionId"
                          ]
                        }
                      }
                    },
                    "required": [
                      "stage",
                      "releases"
                    ]
                  }
                }
              },
              "runAfter": {},
              "type": "ParseJson"
            },
            "for-each-stage": {
              "runtimeConfiguration": {
                "concurrency": {
                  "repetitions": 1
                }
              },
              "actions": {
                "grab-error": {
                  "inputs": "@variables('errorRelease')",
                  "runAfter": {},
                  "type": "Compose"
                },
                "if-no-errors": {
                  "actions": {
                    "current-stage": {
                      "inputs": "@items('for-each-stage')",
                      "runAfter": {},
                      "type": "Compose"
                    },
                    "for-each-release": {
                      "runtimeConfiguration": {
                        "concurrency": {
                          "repetitions": 5
                        }
                      },
                      "actions": {
                        "current-release": {
                          "inputs": "@items('for-each-release')",
                          "runAfter": {},
                          "type": "Compose"
                        },
                        "create-release": {
                          "inputs": {
                            "body": {
                              "organization": "[parameters('organization')]",
                              "pat": "@body('parse-pat')?['value']",
                              "project": "@items('for-each-release')['project']",
                              "environment": "@triggerBody()?['env']",
                              "releaseDefinitionId": "@items('for-each-release')['releaseDefinitionId']",
                              "description": "@concat('Automation for project ', items('for-each-release')['project'])",
                              "variables": {
                                "request-colour": {
                                  "value": "@triggerBody()?['colour']"
                                }
                              }
                            },
                            "host": {
                              "triggerName": "http-post",
                              "workflow": {
                                "id": "[resourceId('Microsoft.Logic/workflows', variables('Create Release App Name'))]"
                              }
                            }
                          },
                          "runAfter": {
                            "current-release": [
                              "Succeeded"
                            ]
                          },
                          "type": "Workflow"
                        },
                        "parse-create-release": {
                          "inputs": {
                            "content": "@body('create-release')",
                            "schema": {
                              "properties": {
                                "releaseId": {
                                  "type": "integer"
                                }
                              },
                              "type": "object"
                            }
                          },
                          "runAfter": {
                            "create-release": [
                              "Succeeded"
                            ]
                          },
                          "type": "ParseJson"
                        },
                        "until-not-in-progress": {
                          "actions": {
                            "delay": {
                              "inputs": {
                                "interval": {
                                  "count": 1,
                                  "unit": "Minute"
                                }
                              },
                              "runAfter": {},
                              "type": "Wait"
                            },
                            "get-release-status": {
                              "inputs": {
                                "body": {
                                  "organization": "[parameters('organization')]",
                                  "pat": "@body('parse-pat')?['value']",
                                  "project": "@items('for-each-release')['project']",
                                  "releaseId": "@body('parse-create-release')?['releaseId']"
                                },
                                "host": {
                                  "triggerName": "http-post",
                                  "workflow": {
                                    "id": "[resourceId('Microsoft.Logic/workflows', variables('Get Release Status App Name'))]"
                                  }
                                }
                              },
                              "runAfter": {
                                "delay": [
                                  "Succeeded"
                                ]
                              },
                              "type": "Workflow"
                            },
                            "parse-get-release-status": {
                              "inputs": {
                                "content": "@body('get-release-status')",
                                "schema": {
                                  "properties": {
                                    "environments": {
                                      "items": {
                                        "properties": {
                                          "name": {
                                            "type": "string"
                                          },
                                          "status": {
                                            "type": "string"
                                          }
                                        },
                                        "required": [
                                          "name",
                                          "status"
                                        ],
                                        "type": "object"
                                      },
                                      "type": "array"
                                    }
                                  },
                                  "type": "object"
                                }
                              },
                              "runAfter": {
                                "get-release-status": [
                                  "Succeeded"
                                ]
                              },
                              "type": "ParseJson"
                            },
                            "filter-environments": {
                              "inputs": {
                                "from": "@body('parse-get-release-status')?['environments']",
                                "where": "@equals(item()?['name'], triggerBody()?['env'])"
                              },
                              "runAfter": {
                                "parse-get-release-status": [
                                  "Succeeded"
                                ]
                              },
                              "type": "Query"
                            },
                            "grab-status": {
                              "inputs": "@body('filter-environments')?[0]['status']",
                              "runAfter": {
                                "filter-environments": [
                                  "Succeeded"
                                ]
                              },
                              "type": "Compose"
                            }
                          },
                          "expression": "@not(equals(outputs('grab-status'), 'inProgress'))",
                          "limit": {
                            "count": 60,
                            "timeout": "PT1H"
                          },
                          "runAfter": {
                            "parse-create-release": [
                              "Succeeded"
                            ]
                          },
                          "type": "Until"
                        },
                        "if-fail": {
                          "actions": {
                            "set-error-release": {
                              "inputs": {
                                "name": "errorRelease",
                                "value": "@concat(items('for-each-release')['project'], '-', items('for-each-release')['releaseDefinitionId'])"
                              },
                              "runAfter": {},
                              "type": "SetVariable"
                            }
                          },
                          "expression": {
                            "and": [
                              {
                                "not": {
                                  "equals": [
                                    "@outputs('grab-status')",
                                    "inProgress"
                                  ]
                                }
                              },
                              {
                                "not": {
                                  "equals": [
                                    "@outputs('grab-status')",
                                    "succeeded"
                                  ]
                                }
                              }
                            ]
                          },
                          "runAfter": {
                            "until-not-in-progress": [
                              "Succeeded"
                            ]
                          },
                          "type": "If"
                        }
                      },
                      "foreach": "@items('for-each-stage')['releases']",
                      "runAfter": {
                        "current-stage": [
                          "Succeeded"
                        ]
                      },
                      "type": "Foreach"
                    }
                  },
                  "expression": {
                    "and": [
                      {
                        "equals": [
                          "@outputs('grab-error')",
                          ""
                        ]
                      }
                    ]
                  },
                  "runAfter": {
                    "grab-error": [
                      "Succeeded"
                    ]
                  },
                  "type": "If"
                }
              },
              "foreach": "@body('parse-project-configuration')",
              "runAfter": {
                "parse-project-configuration": [
                  "Succeeded"
                ],
                "parse-pat": [
                  "Succeeded"
                ],
                "initialize-error-release": [
                  "Succeeded"
                ]
              },
              "type": "Foreach"
            },
            "expose-error": {
              "inputs": "@variables('errorRelease')",
              "runAfter": {
                "for-each-stage": [
                  "Succeeded"
                ]
              },
              "type": "Compose"
            }
          },
          "contentVersion": "1.0.0.0",
          "outputs": {},
          "parameters": {},
          "triggers": {
            "http-post": {
              "inputs": {
                "method": "POST",
                "schema": {
                  "properties": {
                    "env": {
                      "type": "string"
                    },
                    "colour": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "env"
                  ],
                  "type": "object"
                }
              },
              "kind": "Http",
              "type": "Request"
            }
          }
        },
        "parameters": {}
      }
    },
    {
      "name": "[variables('Rebuild Apps')[copyIndex()].app]",
      "type": "Microsoft.Logic/workflows",
      "apiVersion": "2017-07-01",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "copy-rebuild-apps",
        "count": "[length(variables('Rebuild Apps'))]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Logic/workflows', variables('Rebuild Env App Name'))]"
      ],
      "tags": {},
      "properties": {
        "definition": {
          "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
          "actions": {
            "rebuild-environment": {
              "inputs": {
                "body": {
                  "colour": "[variables('Rebuild Apps')[copyIndex()].colour]",
                  "env": "[variables('Rebuild Apps')[copyIndex()].env]"
                },
                "host": {
                  "triggerName": "http-post",
                  "workflow": {
                    "id": "[resourceId('Microsoft.Logic/workflows', variables('Rebuild Env App Name'))]"
                  }
                }
              },
              "runAfter": {},
              "type": "Workflow"
            },
            "Response": {
              "inputs": {
                "headers": {
                  "Content-Type": "text/html; charset=utf-8"
                },
                "body": "[concat('<html><body>Request sent for ', variables('Rebuild Apps')[copyIndex()].colour,'</body></html>')]",
                "statusCode": 200
              },
              "kind": "http",
              "runAfter": {
                "rebuild-environment": [
                  "Succeeded"
                ]
              },
              "type": "Response"
            }
          },
          "contentVersion": "1.0.0.0",
          "outputs": {},
          "parameters": {},
          "triggers": {
            "http-get": {
              "inputs": {
                "method": "GET",
                "schema": {}
              },
              "kind": "Http",
              "type": "Request"
            }
          }
        },
        "parameters": {}
      }
    }
  ],
  "outputs": {
    "Managed Identity": {
      "type": "object",
      "value": "[reference(resourceId('Microsoft.Logic/workflows', variables('Get Secret App Name')), '2017-07-01', 'Full').identity]"
    }
  }
}